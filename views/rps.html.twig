<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>RPS</title>
  </head>
  <body>
    <h1>Rock Paper Scissors!</h1>
      <form action="/play" method="get">
        <label for="player1">Player 1 Choice</label>
        <select name="player1">
          <option value="rock" selected>Rock</option>
          <option value="paper">Paper</option>
          <option value="scissors">Scissors</option>
        </select>
        <label for="player2">Player 2 Choice</label>
        <select name="player2">
          <option value="rock" selected>Rock</option>
          <option value="paper">Paper</option>
          <option value="scissors">Scissors</option>
        </select>
        <button type="submit">Play!</button>
      </form>

      <h2>Results</h2>
        {{ rps.playGame }}
  </body>
</html>
